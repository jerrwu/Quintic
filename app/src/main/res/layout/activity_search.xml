<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search.SearchActivity">

    <androidx.appcompat.widget.Toolbar
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar_search"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:elevation="1dp"
        android:background="@color/colorMain">

        <ImageButton
            android:id="@+id/searchBackButton"
            android:tint="@color/colorSecondary"
            android:foregroundGravity="left"
            app:srcCompat="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_width="36dp"
            android:layout_marginEnd="12dp"
            android:layout_height="36dp" />

        <EditText
            android:id="@+id/searchField"
            android:focusable="true"
            android:layout_marginEnd="18dp"
            android:textSize="20sp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingEnd="0dp"
            android:paddingStart="8dp"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:layout_marginStart="8dp"
            android:textColor="@color/colorFont"
            android:fontFamily="@font/productsansmedium"
            android:hint="@string/search"
            android:gravity="start"
            android:backgroundTint="@color/colorMain"
            android:background="@drawable/round_less_button_ripple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_marginBottom="6dp"
        app:layout_constraintBaseline_toBaselineOf="@id/searchOptionSpinner"
        android:id="@+id/searchEntriesByText"
        android:layout_marginStart="20dp"
        android:textSize="17sp"
        android:textColor="@color/colorFont"
        android:fontFamily="@font/productsansmedium"
        android:text="@string/search_entries_by"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/searchEntriesByText"
        android:id="@+id/searchOptionSpinner"
        android:backgroundTint="@color/colorSupport"
        app:layout_constraintTop_toBottomOf="@id/toolbar_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <FrameLayout
        app:layout_constraintTop_toBottomOf="@id/searchOptionSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginBottom="124dp"
            android:id="@+id/searchActivityRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/searchNoResultsText"
        android:textSize="14sp"
        android:text="@string/no_results"
        android:textColor="@color/colorTertiary"
        android:fontFamily="@font/productsansmedium"
        android:layout_marginTop="112dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>