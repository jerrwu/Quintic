<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:id="@+id/fragmentStart"
    android:overScrollMode="always"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.fragment.FragmentEntries">

    <RelativeLayout
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:animateLayoutChanges="true"
            app:cardElevation="0dp"
            app:contentPaddingTop="12dp"
            android:backgroundTint="@color/colorBackground"
            android:id="@+id/fragmentEntriesInfoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/infoCardRemType"
                android:paddingTop="12dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="4dp"
                    android:layout_gravity="top|start"
                    android:textColor="@color/colorSecondary"
                    android:fontFamily="@font/productsansmedium"
                    android:textSize="20sp"
                    android:text="@string/set_your_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:gravity="end"
                    android:layout_marginTop="32dp"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:background="#00000000"
                        android:textAllCaps="false"
                        android:textColor="@color/blue"
                        android:minWidth="0dp"
                        android:layout_marginEnd="16dp"
                        android:id="@+id/nameRemDismissButton"
                        android:fontFamily="@font/productsansmedium"
                        android:text="Dismiss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:layout_marginEnd="20dp"
                        android:id="@+id/nameRemButton"
                        android:textColor="@color/colorMain"
                        android:fontFamily="@font/productsansmedium"
                        android:textAllCaps="false"
                        android:text="Change now"
                        android:backgroundTint="@color/blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/infoCardGreetingType"
                android:paddingTop="12dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/infoCardGreeting"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="4dp"
                    android:layout_gravity="top|start"
                    android:textColor="@color/colorSecondary"
                    android:fontFamily="@font/productsansmedium"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/infoCardName"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="start"
                    android:textColor="@color/colorFont"
                    android:fontFamily="@font/productsansmedium"
                    android:textSize="24sp"
                    android:layout_marginBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <ImageView
                android:layout_marginTop="12dp"
                android:id="@+id/infoCardReminderIcon"
                android:layout_marginEnd="32dp"
                android:layout_gravity="end|top"
                android:src="@drawable/ic_acc_card"
                android:layout_width="42dp"
                android:layout_height="42dp"/>

            <ImageView
                android:layout_marginTop="12dp"
                android:id="@+id/infoCardGreetingIcon"
                android:layout_marginEnd="16dp"
                android:layout_gravity="end|top"
                android:src="@drawable/ic_home"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:nestedScrollingEnabled="false"
            android:layout_marginTop="12dp"
            android:layout_below="@id/fragmentEntriesInfoCard"
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scrollbars="none" />

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>