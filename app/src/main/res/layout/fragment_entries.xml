<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:id="@+id/fragmentStart"
    android:overScrollMode="always"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentEntries">

    <RelativeLayout
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            app:cardElevation="0dp"
            app:contentPaddingTop="12dp"
            android:backgroundTint="@color/colorBackground"
            android:id="@+id/fragmentEntriesInfoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingTop="12dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:visibility="visible"
                    android:id="@+id/infoCardGreeting"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="4dp"
                    android:layout_gravity="top|start"
                    android:textColor="@color/colorSecondary"
                    android:fontFamily="@font/productsansmedium"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/infoCardName"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="start"
                    android:textColor="@color/colorFont"
                    android:fontFamily="@font/productsansmedium"
                    android:textSize="24sp"
                    android:layout_marginBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <ImageView
                android:layout_marginTop="12dp"
                android:id="@+id/infoCardIcon"
                android:layout_marginEnd="16dp"
                android:layout_gravity="end|top"
                android:src="@drawable/ic_question"
                android:layout_width="36dp"
                android:layout_height="36dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:nestedScrollingEnabled="false"
            android:layout_marginTop="12dp"
            android:layout_below="@id/fragmentEntriesInfoCard"
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scrollbars="none" />

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>