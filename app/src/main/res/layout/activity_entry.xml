<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorMain"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntryActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMain"
        android:elevation="1dp"
        android:minHeight="?attr/actionBarSize">

        <ImageButton
            android:id="@+id/entryBackButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back"
            android:foregroundGravity="left"
            android:tint="@color/colorAccent"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/productsansmedium"
            android:gravity="start"
            android:paddingStart="20dp"
            android:text="@string/create_new"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <ImageButton
            android:layout_marginEnd="16dp"
            android:id="@+id/entrySaveButton"
            android:layout_gravity="end"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/save_entry"
            android:tint="@color/colorAccent"
            app:srcCompat="@drawable/ic_check" />
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:padding="16dp"
        android:id="@+id/container_entry"
        android:layout_above="@id/toolbar_entry_bottom"
        android:layout_below="@id/toolbar_entry"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_marginBottom="8dp"
            android:id="@+id/entryTitleEditText"
            android:padding="8dp"
            android:hint="@string/title"
            android:textColor="@color/colorFont"
            android:textSize="24sp"
            android:fontFamily="@font/productsansmedium"
            android:layout_width="match_parent"
            android:background="@color/colorMain"
            android:layout_height="42dp"/>

        <com.google.android.material.card.MaterialCardView
            android:background="@color/colorMain"
            app:strokeWidth="1.5dp"
            app:strokeColor="@color/colorTertiary"
            app:cardCornerRadius="8dp"
            android:layout_below="@id/entryTitleEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:textColor="@color/colorFont"
                android:textSize="18.5sp"
                android:fontFamily="@font/productsansregular"
                android:padding="14dp"
                android:gravity="start|top"
                android:hint="@string/content"
                android:background="@color/colorMain"
                android:id="@+id/entryContentEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

    <androidx.appcompat.widget.Toolbar
        android:theme="@style/ToolbarColored"
        android:layout_alignParentBottom="true"
        android:id="@+id/toolbar_entry_bottom"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:elevation="12dp"
        android:backgroundTint="@color/colorMain"
        android:background="@drawable/rounded_bottom_sheet">

        <ImageButton
            android:id="@+id/imageAddButton"
            android:layout_gravity="start|center_vertical"
            android:tint="@color/colorFont"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_image_plus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="6dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/account" />

        <TextView
            android:id="@+id/activity_entry_bottom_text"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@color/colorFont"
            android:fontFamily="@font/productsansmedium"
            android:text="@string/create_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.appcompat.widget.Toolbar>

</RelativeLayout>